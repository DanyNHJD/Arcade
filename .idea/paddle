import java.awt.*;
import java.awt.event.*;

public class paddle{
    private int x;
    private int y;
    final private int w = 20;
    final private int h = 75;
    final private int dx = 5;

    public paddle(int startX, int startY){
        x = startX;
        y = startY;
    }

    public void draw(Graphics g){
        g.setColor(Color.WHITE);
        g.fillRect(x,y,w,h);
    }

    public void moveUp(){
        x -= dx;
    }

    public void moveDown(){
        x += dx;
    }

    // Put in Paddle:
    public int getX() {
        return x;
    }

    public int getY() {
        return y;
    }

    public int getWidth() {
        return w;
    }

    public int getHeight() {
        return h;
    }
}